[page_template]
<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml">
  <head>
    <title>{title}</title>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <link rel="stylesheet" href="/site.css" type="text/css"/>
  </head>
  <body>
    <div id="-head">
      <div id="-head-content">
        {path_navigation}
      </div>
    </div>
    <div id="-body">
      <div id="-body-content">
        {body}
      </div>
    </div>
    <div id="-foot">
      <div id="-foot-content">
      </div>
    </div>
  </body>
</html>

[message_index]
<h1>Haymaker</h1>

<h2>Query</h2>

{fields}

<form id="query" action="?" method="get">
  <input name="query" value="{query}" autofocus="autofocus"/>
  <button>Submit</button>
</form>

<h2>Messages</h2>

{messages}

[message_view]
<pre>Id:              {id}
In-Reply-To-Id:  {in_reply_to_link}
List-Id:         {list_id}

From:            {from}
Date:            {date}
Subject:         {subject}

{message_content}</pre>
