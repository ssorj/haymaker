[page_template]
<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml">
  <head>
    <title>{title}</title>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <link rel="stylesheet" href="/site.css" type="text/css"/>
  </head>
  <body>
    <div id="-head">
      <div id="-head-content">
        {path_navigation}
      </div>
    </div>
    <div id="-body">
      <div id="-body-content">
        {body}
      </div>
    </div>
    <div id="-foot">
      <div id="-foot-content">
      </div>
    </div>
  </body>
</html>

[message_index]
<form id="query" action="?" method="get">
  <textarea name="query">{query}</textarea>
  <input type="submit"/>
</form>

{messages}

[message_view]
<pre>
From:     {message.from_name} &lt;{message.from_address}&gt;
Date:     {message.date}
Subject:  {message.subject}

{message.content}
</pre>
