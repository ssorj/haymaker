[page]
<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml">
  <head>
    <title>{title}</title>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <link rel="stylesheet" href="/site.css" type="text/css"/>
    <link rel="icon" href="" type="image/png"/>
  </head>
  <body>
    <div id="-head">
      <div id="-head-content">
        {path_navigation}
      </div>
    </div>
    <div id="-body">
      <div id="-body-content">
        {content}
      </div>
    </div>
    <div id="-foot">
      <div id="-foot-content">
      </div>
    </div>
  </body>
</html>

[index]
<h1>Haymaker</h1>

Search and browse Qpid mailing list content.

<h2>Search messages</h2>

<form id="query" action="/search.html" method="get">
  <input name="query" autofocus="autofocus"/>
</form>

<h2>Messages by user</h2>

{users}

<h2>Messages by month</h2>

{months}

[message]
<h1>{subject}</h1>

<code>Id:              {id}</code><br/>
<code>In-Reply-To-Id:  {in_reply_to_link}</code><br/>
<code>List-Id:         {list_id}</code><br/>

<code>From:            {from}</code><br/>
<code>Date:            {date}</code><br/>
<code>Subject:         {subject}</code><br/>

<pre>{message_content}</pre>

[search]
<h1>Search</h1>

<form id="query" action="?" method="get">
  <input name="query" value="{query}" autofocus="autofocus"/>
</form>



{messages}
