from __future__ import print_function

import sqlite3

from haymaker import *
from plano import *
from mailbox import mbox

def import_mbox(cursor, path):
    mb = mbox(path)
    
    for mbox_message in mb.values():
        message = Message.from_mbox_message(mbox_message)

        if message.from_address == "jira@apache.org":
            continue
        
        if message.from_address == "qpid-dev@incubator.apache.org":
            continue
        
        if message.from_address == "git@git.apache.org":
            continue

        print(message)
        
        message.save(cursor)

        cursor.connection.commit()

database_file = "data/data.sqlite"

database = MessageDatabase(database_file)
database.create_schema()

conn = sqlite3.connect(database_file)
cursor = conn.cursor()

try:
    for name in list_dir("data", "*.mbox"):
        import_mbox(cursor, join("data", name))
finally:
    conn.close()

database.optimize()
